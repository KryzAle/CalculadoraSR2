<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pantalla_resultado"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jsroc.subredes.PantallaResultado">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relativeLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/btn_rangos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="84dp"
            android:text="Desplegar Rangos de Subredes"
            android:textAppearance="@android:style/TextAppearance.Material.Small" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txt_MsB"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="17dp"
            android:fontFamily="casual"
            android:text="Mascara de subred"
            android:textColor="@android:color/background_dark" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:id="@+id/txt_Ms"
            android:layout_alignBottom="@+id/txt_MsB"
            android:layout_alignEnd="@+id/textView9" />

        <TextView
            android:id="@+id/txt_bHost"
            android:layout_height="25dp"
            android:layout_width="100dp"
            android:layout_marginBottom="21dp"
            android:layout_above="@+id/txt_Host"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:id="@+id/txt_Host"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="27dp"
            android:layout_above="@+id/textView9"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/textView16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txt_Host"
            android:layout_alignBottom="@+id/txt_Host"
            android:layout_alignParentStart="true"
            android:fontFamily="casual"
            android:text="Número de bits de host"
            android:textColor="@android:color/background_dark" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:id="@+id/txt_bSred"
            android:layout_alignBaseline="@+id/textView9"
            android:layout_alignBottom="@+id/textView9"
            android:layout_alignStart="@+id/txt_Host" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView11"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="22dp"
            android:fontFamily="casual"
            android:text="Número de bits de subredes"
            android:textColor="@android:color/background_dark" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:id="@+id/txt_Sred"
            android:layout_alignBaseline="@+id/textView11"
            android:layout_alignBottom="@+id/textView11"
            android:layout_alignStart="@+id/txt_bSred" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView12"
            android:layout_alignEnd="@+id/textView15"
            android:layout_marginBottom="31dp"
            android:fontFamily="casual"
            android:text="Saltos entres subredes"
            android:textColor="@android:color/background_dark" />

        <TextView
            android:layout_width="40dp"
            android:id="@+id/txt_salto"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/textView13"
            android:layout_alignStart="@+id/txt_Sred" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="103dp"
            android:layout_toStartOf="@+id/txt_bHost"
            android:fontFamily="casual"
            android:text="Info de la Red"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="@android:color/background_dark" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txt_bHost"
            android:layout_alignBottom="@+id/txt_bHost"
            android:layout_alignParentStart="true"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="53dp"
            android:fontFamily="casual"
            android:text="Número de host"
            android:textColor="@android:color/background_dark" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txt_salto"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="20dp"
            android:fontFamily="casual"
            android:text="Número de subredes"
            android:textColor="@android:color/background_dark" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:id="@+id/txt_Sr"
            android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/txt_salto" />

        <TextView
            android:id="@+id/txt_MsB"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_above="@+id/txt_Sr"
            android:layout_alignEnd="@+id/txt_Sr"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="107dp" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txt_Sr"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:fontFamily="casual"
            android:text="Primera subred"
            android:textColor="@android:color/background_dark" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txt_Sr"
            android:layout_toEndOf="@+id/txt_Ms"
            android:fontFamily="casual"
            android:text="Última Subred"
            android:textColor="@android:color/background_dark" />

    </RelativeLayout>

</RelativeLayout>
